{
  "name": "@productbrain/mcp",
  "version": "0.0.1-beta.0",
  "description": "ProductBrain MCP server \u2014 single source of truth for product knowledge in Cursor, Claude Desktop, and any MCP-compatible AI assistant.",
  "type": "module",
  "bin": {
    "productbrain": "dist/cli/index.js",
    "synergyos-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    ".env.mcp.example"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "publish:beta": "npm publish --tag=beta",
    "version:prerelease": "npm version prerelease"
  },
  "keywords": [
    "productbrain",
    "synergyos",
    "mcp",
    "model-context-protocol",
    "cursor",
    "claude-desktop",
    "product-management",
    "knowledge-base",
    "glossary",
    "business-rules",
    "terminology"
  ],
  "author": "SynergyOS.ai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/synergyai-os/productbrain.git"
  },
  "homepage": "https://github.com/synergyai-os/productbrain#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "convex": "^1.32.0",
    "posthog-node": "^5.24.17",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
